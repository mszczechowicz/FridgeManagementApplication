<Page x:Class="FridgeManagementApplication.Pages.EventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FridgeManagementApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="720"
      FontFamily="Comic Sans MS"
      Title="EventsPage">

    <Grid>
        <TextBlock Text="Events" Foreground="#FFA4BEC1" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,0,0,0" />
        
        <ListBox x:Name="RaportsList" Grid.Column="2"              
                 d:ItemsSource="{d:SampleData ItemCount=5}"
                 
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 FontSize="16"
                 Padding="25"
                  
                 Background="#39556F" Foreground="White"                
                 Width="620" Height="250"
                 BorderThickness="5" BorderBrush="#497AA7"/>
    </Grid>
</Page>
